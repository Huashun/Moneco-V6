<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/popupW"
    android:orientation="vertical"
    android:background="#f4ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:background="@drawable/popup_button_style">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:scaleType="fitCenter"
                android:background="@drawable/map_pop_button_style"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_owl_white_24dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/animalFilter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="animalia"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:textSize="10dp"
                android:id="@+id/textView5" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:background="@drawable/map_pop_button_style"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_flower_white_24dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/plantFilter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="plantae"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:id="@+id/textView6" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:background="@drawable/map_pop_button_style"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_snapchat_white_24dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/fungiFilter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="fungi"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:id="@+id/textView7" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageButton
                android:background="@drawable/map_pop_button_style"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/climateWatchFilter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="climatewatch"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:id="@+id/textView11" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewAnimalName"
        android:layout_centerHorizontal="true" />

</LinearLayout>
